# LexGraph Legal RAG Environment Configuration

# API Configuration
API_KEY=development-api-key-change-in-production
ENVIRONMENT=development
DEBUG=true

# OpenAI Configuration (required for embeddings and LLM)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vector Database Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp

# Document Storage
LEGAL_CORPUS_PATH=./data/legal_docs
INDEX_PATH=./data/indices
FAISS_INDEX_PATH=./data/indices/faiss.index
SEMANTIC_INDEX_PATH=./data/indices/semantic.index

# API Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Metrics and Monitoring
METRICS_PORT=8001
PROMETHEUS_ENABLED=true
STRUCTURED_LOGGING=true
LOG_LEVEL=INFO

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
QUERY_CACHE_TTL=300
EMBEDDING_BATCH_SIZE=32

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
REQUIRE_HTTPS=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Database Configuration (if using database for persistence)
DATABASE_URL=sqlite:///./data/lexgraph.db

# Streamlit Configuration
STREAMLIT_PORT=3000
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Development Tools
ENABLE_DOCS=true
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_CORPUS_PATH=./tests/fixtures/documents