# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Docker files
[Dockerfile*]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Web files
[*.{html,css,js,ts}]
indent_size = 2

# Documentation
[*.rst]
indent_size = 3
max_line_length = 79

# Makefile
[Makefile]
indent_style = tab